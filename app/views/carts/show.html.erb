<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<h2>Your Pragmatic Cart</h2>
<ul>
  <% @cart.line_items.each do |item| %>
      <li><%=item.quantity %> &times;<%= item.product.title %>  : <%= number_to_currency(item.product.price) %></li>
  <% end %>
</ul>
<h3> Total price is :
  <p>
    <%= number_to_currency(calculate) %>
  </p>
</h3>
